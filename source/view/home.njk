{% extends 'index.njk' %}

{% block title %} | Jeux {% endblock title %} {# soon i18n #}

{% block content %}
			<h1>Game</h1> {# soon i18n #}
			<nav class="secondary">
				<a data-game="all" class="selected">All Games</a> {# soon i18n #}
				<a data-game="de">Deutsch</a>
				<a data-game="en">English</a>
				<a data-game="es">Español</a>
				<a data-game="fr">Français</a>
			</nav>
			{% if (games.length > 0) %}
				<div class="games">
					{% for game in games %}
						<div class="game" data-locale="{{ game.lang if game.lang else "all" }}">
							<div class="information">
								<img class="cover" src="{{ game.cover }}" alt="{{ game.name }}">
								<div>
									<h2 class="name">{{ game.name }}</h2>
									<table>
										<tbody>
											<tr><td>{{ game.stat }}</td><td>statistiques</td></tr> {# soon i18n #}
											<tr><td>{{ game.achievement }}</td><td>récompenses</td></tr> {# soon i18n #}
											<tr><td>{{ game.score }}</td><td>points</td></tr> {# soon i18n #}
											<tr><td>{{ game.player }}</td><td>joueurs</td></tr> {# soon i18n #}
										</tbody>
									</table>
								</div>
							</div>
							<div class="progress">
								{% set percent = game.score / 10 %}
								<div class="bar" style="width: {{ percent if (percent <= 100) else 100 }}%"></div>
							</div>
							<a class="button" href="/{{ locale }}/game/{{ game.id }}">Pictos</a>
						</div>
					{% endfor %}
				</div>
				<div class="hgames"></div>
			{% else %}
				<p>No games found.</p>
			{% endif %}
{% endblock content %}